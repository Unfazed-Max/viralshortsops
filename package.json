{
  "name": "viralshortsops",
  "version": "1.0.0",
  "private": true,
  "description": "Automated multi-niche, multilingual short-form video generation and posting platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "db:generate": "pnpm --filter @viralshortsops/db generate",
    "db:migrate": "pnpm --filter @viralshortsops/db migrate:dev",
    "db:push": "pnpm --filter @viralshortsops/db push",
    "db:seed": "pnpm --filter @viralshortsops/db seed",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
